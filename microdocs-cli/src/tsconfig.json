{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": false,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "chai",
      "fs-extra",
      "handlebars",
      "highlight.js",
      "jasmine",
      "lodash",
      "marked",
      "minimatch",
      "mkdirp",
      "node",
      "shelljs"
    ]
  }
}