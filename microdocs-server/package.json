{
  "name": "@maxxton/microdocs-server",
  "version": "2.0.1",
  "description": "MicroDocs server, see http://microdocs.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/MaxxtonGroup/microdocs"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build.tsc && npm run build.package",
    "build.package": "ts-node ./build/build.package.json.ts",
    "build.tsc": "tsc --project ./src/tsconfig.json",
    "clean": "ts-node ./build/clean.dist.ts",
    "start": "ts-node src/index.ts",
    "serve": "ts-node src/index.ts",
    "debug": ".nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec  --debug-brk \"ts-node src/index.ts\"",
    "watch": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
    "test": "jest",
    "link": "cd dist && npm link",
    "linkDeps": "npm link @maxxton/microdocs-core"
  },
  "author": "Steven Hermans (s.hermans@maxxton.com)",
  "license": "MIT",
  "dependencies": {
    "@maxxton/microdocs-core": "2.0.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.0",
    "express-handlebars": "^5.3.2",
    "handlebars": "^4.7.7",
    "helmet": "^4.6.0",
    "js-yaml": "^4.1.0",
    "jsontoxml": "1.0.1",
    "lodash": "^4.17.21",
    "mkdir-p": "0.0.7",
    "multer": "^1.4.2",
    "node-rest-client": "^3.1.0",
    "node-yaml-config": "0.0.6",
    "ts-node": "9.1.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/express": "^4.0.35",
    "@types/express-handlebars": "0.0.29",
    "@types/handlebars": "^4.0.31",
    "@types/helmet": "0.0.33",
    "@types/jest": "26.0.23",
    "@types/multer": "0.0.33",
    "@types/node": "^7.0.0",
    "@types/uuid": "^2.0.29",
    "async": "^2.0.1",
    "del": "^2.2.2",
    "gaze": "^1.1.2",
    "jest": "26.6.3",
    "merge2": "^1.0.2",
    "nodemon": "^1.11.0",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "vinyl-paths": "^3.0.1"
  }
}
