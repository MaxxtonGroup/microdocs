{
  "name": "@maxxton/microdocs-server",
  "version": "1.6.10",
  "description": "MicroDocs server, see http://microdocs.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/MaxxtonGroup/microdocs"
  },
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "debug": "nodemon dist/index.js --debug",
    "compile": "rm -rf dist/* && (mkdir dist || true) && cp package.json dist && cp src/application.yml dist && tsc -p tsconfig.build.json",
    "setup": "yarn --freeze-lockfile",
    "lint": "tslint --project tsconfig.json",
    "watch": "rm -rf dist/* && (mkdir dist || true) && cp package.json dist && cp src/application.yml dist && tsc -p tsconfig.json -w",
    "clean": "rm -rf dist/*",
    "test": "rm -rf dist/* && (mkdir dist || true) && cp package.json dist && cp src/application.yml dist && tsc -p tsconfig.json && mocha ./dist/**/*.spec.js"
  },
  "author": "Steven Hermans (s.hermans@maxxton.com)",
  "license": "MIT",
  "dependencies": {
    "@types/winston": "^2.3.7",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "helmet": "^2.1.1",
    "js-yaml": "^3.9.1",
    "json-patch": "^0.6.1",
    "jsonschema": "^1.2.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.1",
    "typedi": "^0.5.2",
    "uuid": "^2.0.3",
    "validator.ts": "^0.2.2",
    "winston": "^2.4.0",
    "worker-farm": "^1.5.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/bytes": "^2.5.1",
    "@types/chai": "^4.0.3",
    "@types/express": "^4.0.37",
    "@types/http-errors": "^1.6.1",
    "@types/js-yaml": "^3.9.0",
    "@types/json-patch": "^0.0.29",
    "@types/mkdirp": "^0.5.0",
    "@types/mocha": "^2.2.41",
    "@types/type-is": "^1.6.0",
    "@types/uuid": "^3.4.0",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.1.1",
    "express-request-proxy": "^2.0.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  }
}
